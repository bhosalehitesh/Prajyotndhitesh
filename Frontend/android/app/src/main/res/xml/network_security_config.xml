<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTP connections for development (Android 9+ blocks cleartext by default) -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Localhost for physical devices -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Your computer's IP addresses for direct connection (historical + current) -->
        <domain includeSubdomains="true">192.168.1.9</domain>
        <domain includeSubdomains="true">192.168.1.14</domain>
        <domain includeSubdomains="true">192.168.1.19</domain>
        <domain includeSubdomains="true">192.168.1.21</domain>
        <domain includeSubdomains="true">192.168.1.36</domain>
        <domain includeSubdomains="true">192.168.1.59</domain>
        <domain includeSubdomains="true">192.168.1.82</domain>
        <domain includeSubdomains="true">192.168.1.25</domain>
        <domain includeSubdomains="true">192.168.1.45</domain>
        <domain includeSubdomains="true">192.168.1.57</domain>
        <domain includeSubdomains="true">192.168.1.24</domain>
        <domain includeSubdomains="true">192.168.1.84</domain>
        <domain includeSubdomains="true">192.168.1.47</domain>
        <domain includeSubdomains="true">192.168.1.11</domain>
        <domain includeSubdomains="true">192.168.1.27</domain>
        <domain includeSubdomains="true">10.222.34.174</domain>
        <domain includeSubdomains="true">10.99.53.174</domain>
        <domain includeSubdomains="true">10.229.56.174</domain>
        <!-- Mobile hotspot IP ranges (Android: 192.168.43.x, iOS/Windows: 192.168.137.x) -->
        <domain includeSubdomains="true">192.168.43.1</domain>
        <domain includeSubdomains="true">192.168.137.1</domain>
    </domain-config>
    
    <!-- Allow all HTTP connections in development (more permissive for any IP) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
