# ====================================================
# REACT NATIVE FRONTEND - PRODUCTION ENVIRONMENT
# ====================================================

# API Configuration
API_URL=https://api.smartbiz.ltd/api
API_BASE_URL=https://api.smartbiz.ltd
API_TIMEOUT=30000

# App Configuration
APP_NAME=Sakhi Store
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
ENVIRONMENT=production

# Feature Flags
ENABLE_LOGGING=false
ENABLE_DEBUG_MENU=false
ENABLE_CRASH_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_MEASUREMENT_ID=your-firebase-measurement-id

# Sentry Configuration (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Payment Gateway
RAZORPAY_KEY_ID=rzp_live_YOUR_KEY_HERE

# Third-party Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Store Configuration
STORE_NAME=Sakhi Store
STORE_DOMAIN=https://smartbiz.ltd
SUPPORT_EMAIL=support@smartbiz.ltd
SUPPORT_PHONE=+91-YOUR-PHONE
SUPPORT_WHATSAPP=+91-YOUR-WHATSAPP-NUMBER

# Performance & Security
SESSION_TIMEOUT=3600000
MAX_UPLOAD_SIZE=52428800
TOKEN_REFRESH_INTERVAL=300000

# Deep Linking
DEEP_LINK_SCHEME=sakhistore://
DEEP_LINK_PREFIX=https://smartbiz.ltd/app/

# Analytics
ANALYTICS_ENABLED=true
AMPLITUDE_API_KEY=your_amplitude_key
