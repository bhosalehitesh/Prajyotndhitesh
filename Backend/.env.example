# ====================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ====================================================
# Copy this file to .env and fill in your values
# The .env file is gitignored and won't be committed
#
# For SolidCP deployment, set these as environment variables
# For local development, use this .env file
# ====================================================

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/newdbb
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here

# Razorpay (Use test keys for development)
RAZORPAY_KEY=rzp_test_your_test_key_here
RAZORPAY_SECRET=your_razorpay_secret_here

# Cloudinary
CLOUDINARY_NAME=your_cloudinary_cloud_name
CLOUDINARY_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET=your_cloudinary_api_secret

# JWT Secret (Generate a strong random string - minimum 64 characters)
# Use PowerShell: -join ((65..90) + (97..122) + (48..57) | Get-Random -Count 64 | % {[char]})
JWT_SECRET=your_very_strong_secret_key_here_minimum_64_characters

# Email Configuration
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_app_password_here

# SMS Configuration (Kutility) - Leave empty if using dev mode
SMS_KUTILITY_KEY=
SMS_KUTILITY_SECRET=

# Server Configuration
SERVER_PORT=8080

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# Store Domain
STORE_DOMAIN=https://smartbiz.ltd
