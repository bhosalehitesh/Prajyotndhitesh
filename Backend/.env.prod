# ====================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ====================================================
# Copy this file to .env in production and fill in actual values
# NEVER commit this file to version control with real credentials

# ====================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ====================================================
DB_URL=jdbc:postgresql://prod-db-host:5432/sakhistore_prod
DB_USERNAME=prod_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ====================================================
# RAZORPAY (LIVE KEYS - PRODUCTION)
# ====================================================
RAZORPAY_KEY=rzp_live_YOUR_LIVE_KEY_HERE
RAZORPAY_SECRET=YOUR_LIVE_SECRET_HERE

# ====================================================
# CLOUDINARY (PRODUCTION ACCOUNT)
# ====================================================
CLOUDINARY_NAME=your_prod_cloudinary_name
CLOUDINARY_KEY=your_prod_cloudinary_key
CLOUDINARY_SECRET=your_prod_cloudinary_secret

# ====================================================
# JWT SECRET (PRODUCTION - MUST BE STRONG)
# ====================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GENERATE_NEW_STRONG_SECRET_MINIMUM_256_BITS_64_CHARACTERS

# ====================================================
# EMAIL CONFIGURATION (PRODUCTION)
# ====================================================
MAIL_USERNAME=your_prod_email@gmail.com
MAIL_PASSWORD=your_app_specific_password_not_actual_password

# ====================================================
# SMS CONFIGURATION (KUTILITY - PRODUCTION KEYS)
# ====================================================
SMS_KUTILITY_KEY=your_prod_kutility_key
SMS_KUTILITY_SECRET=your_prod_kutility_secret

# ====================================================
# SERVER CONFIGURATION
# ====================================================
SERVER_PORT=8080

# ====================================================
# STORE DOMAIN (PRODUCTION)
# ====================================================
STORE_DOMAIN=https://smartbiz.ltd

# ====================================================
# CORS CONFIGURATION
# ====================================================
CORS_ALLOWED_ORIGINS=https://smartbiz.ltd,https://www.smartbiz.ltd

# ====================================================
# DEPLOYMENT PROFILE
# ====================================================
SPRING_PROFILES_ACTIVE=prod

# ====================================================
# JVM CONFIGURATION
# ====================================================
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
